<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent">

    <Button
        android:text="Open with GET_CONTENT"
        android:id="@+id/open_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Open with GET_DOCUMENT"
        android:id="@+id/open_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Open a text document"
        android:id="@+id/open_text_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Create a text document"
        android:id="@+id/create_text_document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="#eeeeee"
        android:minLines="5"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:id="@+id/text"
        android:layout_height="wrap_content" />

</LinearLayout>